@model IEnumerable<Recipe>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Available Recipes</h2>
        </div>
        <div class=" col-6 text-end">
            <a asp-controller="Recipe" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Write New Recipe
            </a>
        </div>
    </div>
    <br /><br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Recpie
                </th>
                <th>
                    Cuisine
                </th>
                <th>
                    Type
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model)
            {
                <tr>
                    <td width="50%">
                        <a asp-controller="Recipe" asp-action="LookSee" asp-route-id="@recipe.Id">@recipe.Title</a>
                    </td>
                    <td width="20%">
                        @recipe.Cuisine
                    </td>
                    <td width="20%">
                        @recipe.Category
                    </td>
                    <td width="10%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Recipe" asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Recipe" asp-action="Delete" asp-route-id="@recipe.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>